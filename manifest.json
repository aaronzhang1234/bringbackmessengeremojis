{
    "name": "Bring back old Messenger Emojis",
    "version": "1.3",
    "description": "Converts the new messenger emojis to the cooler old ones",
    "background":{
        "scripts":["background.js"],
        "persistent":false
    },
    "page_action":{
        "default_icon":{
            "16":"eyes.png",
            "24":"eyes.png",
            "32":"eyes.png"
        }
    },
    "content_scripts":[
        {
            "run_at":"document_end",
            "matches":["https://www.messenger.com/*"],
            "js":["changer.js"]
        }
    ],
    "manifest_version": 2
 }